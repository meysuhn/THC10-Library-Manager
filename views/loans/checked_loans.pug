extends ../layout

block content
    h1 Checked Out Books
    include ../includes/loans_nav.pug
    table
      thead
        tr
          th Book
          th Patron
          th Loaned on
          th Return by
          th Returned on
          th Action
      tbody
        each loan in checkedloans
          tr
            td
              a(href=`/books/${loan.Book.id}`)=loan.Book.title
            td
              a(href=`/patrons/${loan.Patron.id}`)=loan.Patron.first_name  + ' ' + loan.Patron.last_name
            td=loan.loaned_on
            td=loan.return_by
            td=loan.returned_on
            td
              a.button(href=`/loans/${loan.id}/return`) Return Book
        
