extends layout

block content
    h1 Overdue Loans
    include includes/loans_nav.pug
    table
      thead
        tr
          th Book
          th Patron
          th Loaned on
          th Return by
          th Returned on
          th Action
      tbody
        each loan in overdueLoans
          tr
            td
              a(href=`/books/${loan.id}`)=loan.Book.title
            td
              a(href=`/patrons/${loan.id}`)=loan.Patron.first_name  + ' ' + loan.Patron.last_name
            td=loan.loaned_on
            td=loan.return_by
            td
            td
              a.button(href='return_book.html') Return Book
