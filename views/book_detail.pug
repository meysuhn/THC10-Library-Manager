extends layout

block content
    h1 Book: #{bookDetail.title}
    form(action="/books/" + bookDetail.id + "?_method=PUT", method="post")
      p
        label(for='title') Title
        input#title(type='text', name="title" value=bookDetail.title)
      p
        label(for='author') Author
        input#author(type='text', name="author" value=bookDetail.author)
      p
        label(for='genre') Genre
        input#genre(type='text', name="genre" value=bookDetail.genre)
      p
        label(for='first_published') First Published
        input#first_published(type='text', name="first_published" value=bookDetail.first_published)
      p
        input(type='submit', value='Update')
    include includes/loan_history.pug
